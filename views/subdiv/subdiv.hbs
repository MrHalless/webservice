<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="page-title">
      <!--#my-modal -->
      <h1>Подразделения</h1>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <div class="row">
        <div class="col-md-12">
          <!-- Tab panes -->
          <div class="tab-content">
            <div class="row">
              <div class="page-title col-md-12">
                <a href="/subdiv/subdiv_add" role="button" id="">
                  <button class="btn btn-success" style="float: right;">
                    Добавить подразделение
                  </button>
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="card-box table-responsive">
                  <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap no-footer">
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="card-box table-responsive">
                          <table id="table_servers" class="table table-striped table-bordered dataTable no-footer"
                            style="width: 100%" role="grid" aria-describedby="datatable_info">
                            <thead>
                              <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1"
                                  aria-sort="ascending" aria-label="ID: активировать для сортировки столбца по убыванию"
                                  style="width: 10px; text-align: center">
                                  №
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1"
                                  aria-label="ФИО: активировать для сортировки столбца по убыванию"
                                  style="width: 100px; text-align: center">
                                  Наименование
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1"
                                  aria-label="ФИО: активировать для сортировки столбца по убыванию"
                                  style="width: 100px; text-align: center">
                                  Город
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1"
                                  aria-label="ФИО: активировать для сортировки столбца по убыванию"
                                  style="width: 100px; text-align: center">
                                  Комплекс
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1"
                                  aria-label="Комплекс: активировать для сортировки столбца по убыванию"
                                  style="width: 100px; text-align: center">
                                  Доступные языки
                                </th>
                                <th class="" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1"
                                  aria-label="Подразделение: активировать для сортировки столбца по убыванию"
                                  style="width: 100px; text-align: center">
                                  Доступные серверы
                                </th>
                                <th class="" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1"
                                  aria-label="Подразделение: активировать для сортировки столбца по убыванию"
                                  style="width: 200px; text-align: center">
                                  Действия
                                </th>
                              </tr>
                            </thead>
                            <tbody>
                              {{#if subdiv.length}}
                                {{#each subdiv}}
                                  <tr role="row" class="odd">
                                    <td class="sorting_1" style="
                                    text-align: center;
                                    vertical-align: middle;
                                  ">
                                      {{counter @index}}
                                    </td>
                                    <td class="sorting_1" style="
                                    text-align: center;
                                    vertical-align: middle;
                                  ">
                                      {{ name }}
                                    </td>
                                    <td class="sorting_1" style="
                                    text-align: center;
                                    vertical-align: middle;
                                  ">
                                      {{ city }}
                                    </td>
                                    <td class="sorting_1" style="
                                    text-align: center;
                                    vertical-align: middle;
                                  ">
                                      {{ complex }}
                                    </td>
                                    <td class="sorting_1" style="
                                    text-align: center;
                                    vertical-align: middle;
                                  ">
                                      {{#each @root.lang}}
                                        / {{firstDescription}}-{{secondDescription}}
                                      {{/each}}
                                    </td>
                                    <td class="sorting_1" style="
                                    text-align: center;
                                    vertical-align: middle;
                                  ">
                                      {{#each servers}}
                                        / {{this.name}}
                                      {{/each}}
                                    </td>
                                    <td style="text-align: center; padding: 8px 0 0 0; vertical-align: middle;">
                                      <div class="row d-flex justify-content-center">
                                        <a href="/subdiv/{{ _id }}/subdiv_edit" class=" btn btn-primary btn-md"
                                          style="margin-bottom: 8px;" data-rel="tooltip" title=""
                                          data-original-title="Редактировать">
                                          <div class="glyphicon glyphicon-pencil" style="color: #FFF;"></div>
                                        </a>
                                        <a href="/subdiv/{{ _id }}/subdiv_delete""
                                      class=" btn btn-danger btn-md" style="margin-bottom: 8px;" data-rel="tooltip"
                                          title="" data-original-title="Удалить">
                                          <div class="glyphicon glyphicon-trash" style="color: #FFF;"></div>
                                        </a>
                                      </div>
                                    </td>
                                  </tr>
                                {{/each}}
                              {{/if}}
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>