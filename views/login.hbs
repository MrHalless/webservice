<body class="login">
  <div>
    <div class="login_wrapper">
      <div class="animate form login_form" id="login">
        <section class="login_content">
          <form action="/login" method="POST">
            <h1>Авторизация</h1>
            <div>
              <input
                id="name"
                name="name"
                type="text"
                class="form-control"
                placeholder="Логин "
                required=""
              />
            </div>
            <div>
              <input
                id="password"
                name="password"
                type="password"
                class="form-control"
                placeholder="Пароль"
                required=""
              />
            </div>
            <div>
              <button
                class="btn btn-primary submit button__login"
                type="submit"
              >
                Войти
              </button>
            </div>

            <div class="clearfix"></div>
          </form>
        </section>
      </div>
    </div>
  </div>
</body>
